@{ ViewData["Title"] = "Student Search"; }

@section Styles {
    <link rel="stylesheet" type="text/css" href="~/css/student-search.css" />
}

@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Xsrf
@functions{
    public string GetAntiXsrfRequestToken()
    {
        return Xsrf.GetAndStoreTokens(Context).RequestToken;
    }
}

<input type="hidden" id="RequestVerificationToken" name="RequestVerificationToken" value="@GetAntiXsrfRequestToken()">

<h1>
    Student Search
</h1>

<hr />


<p class="d-flex align-items-center">
    <input type="search" id="student-search-bar" class="form-control" placeholder="Search for keywords..." />
    <button type="submit" id="submit-student-search" class="btn btn-primary">Search</button>
</p>
<span id="student-search-error" class="text-danger">
</span>

<div id="student-search-results">

</div>

<div id="student-card-template" class="card hide invisible">
    <img class="card-img-top" src="https://www.cs.utah.edu/~germain/Eye_Candy/jim_p.png" alt="Student profile picture">
    <div class="card-body">
        <h5 class="card-title">Student name</h5>
        <p class="card-text student-search-summary">
            The student's summary would go here but would be truncated to 100 characters...
        </p>
        <p class="card-text student-search-field ">
            <b>uID: </b>
            <span class="student-search-uid"></span>
        </p>
        <p class="card-text student-search-field">
            <b>GPA: </b>
            <span class="student-search-gpa"></span>
        </p>
        <p class="card-text student-search-field">
            <b>Skills: </b>
            <span class="student-search-skills"></span>
        </p>
        <a href="#" class="btn btn-primary">View Application</a>
    </div>
</div>

@section Scripts {
    <script src="~/js/student-search.js"></script>
}
