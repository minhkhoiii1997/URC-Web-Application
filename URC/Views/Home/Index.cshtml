@using Microsoft.AspNetCore.Identity;
@inject SignInManager<URC.Areas.Identity.Data.ApplicationUser> SignInManager
@inject UserManager<URC.Areas.Identity.Data.ApplicationUser> UserManager

@{
    ViewData["Title"] = "Home Page";
    Layout = "_IndexLayout";
}



@section Styles {
    <link rel="stylesheet" type="text/css" href="~/css/landing.css" />
}

<main>
    <div id="landing">
        <img id="landing-bg" src="https://ushe.edu/wp-content/uploads/2020/01/20160627_UULIFESTYLE_2098-1024x618.jpg" alt="students standing in front of Marriot library">
        <div id="hero">
            <h1>
                Find your research
            </h1>
            <p>
                Build your resume. Network with professionals. Find research or talent.
            </p>
            <div>
                <button type="button" id="login-button" class="btn btn-primary">
                    <a asp-controller="Opportunities">See projects</a>
                </button>
                @if (SignInManager.IsSignedIn(User))
                {
                    <button type="button" id="featured-button" class="btn btn-outline-primary">
                        <a href="/Profile/@UserManager.GetUserName(User)">My Profile »</a>
                    </button>
                }
                else
                {
                    <button type="button" id="featured-button" class="btn btn-outline-primary">
                        <a asp-area="Identity" asp-page="/Account/Register">Register »</a>
                    </button>
                }
            </div>
        </div>
    </div>
    <div id="below-fold">
        <div id="about-us" class="container-fluid d-flex align-items-center content-block">
            <div>
                <h2>
                    ABOUT US
                </h2>
                <p>The Office of Undergraduate Research (OUR) resides in the Office of Undergraduate Studies. We house the Undergraduate Research Opportunities Program (UROP), the Summer Program for Undergraduate Research (SPUR), the Undergraduate Research Scholar Designation (URSD), hold the annual Undergraduate Research Symposium (URS), and publish the annual Undergraduate Research Journal. The OUR hosts workshops on research-related topics, offers small & travel grants, and advising for aspiring undergraduate student researchers. The OUR also provides a connection to numerous presentation and publication opportunities on a local, state, and nation-wide basis.</p>
                <p>
                    The mission of the University Of Utah Office of Undergraduate Research is to <b> facilitate and promote undergraduate student-faculty collaborative research and creative works in all disciplines </b> throughout the University of Utah campus.
                </p>
                <br />
                <button class="btn btn-primary">
                    About us
                </button>
            </div>
            <img src="https://www.cs.utah.edu/~germain/Eye_Candy/jim_p.png" alt="Portrait of Professor Jim de St. Germain" />
        </div>

        <div id="featured-projects" class="container-fluid content-block">
            <h2>
                FEATURED RESEARCH
            </h2>
            <!-- Carousel starter code taken from https://getbootstrap.com/docs/4.5/components/carousel/-->
            <div id="featured-projects-carousel" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#featured-projects-carousel" data-slide-to="0" class="active"></li>
                    <li data-target="#featured-projects-carousel" data-slide-to="1"></li>
                    <li data-target="#featured-projects-carousel" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="https://ewscripps.brightspotcdn.com/dims4/default/0f61658/2147483647/strip/true/crop/1920x1080+0+0/resize/1280x720!/quality/90/?url=http%3A%2F%2Fewscripps-brightspot.s3.amazonaws.com%2F83%2Ff4%2F9469f6c145a1ac455ca6938b7c23%2Fu-of-u.jpeg" class="d-block w-100" alt="U monument">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>Undergraduate Research Coordinator</h5>
                            <p>Finding research opportunities or talent has never been easier.</p>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="https://upload.wikimedia.org/wikipedia/commons/e/e1/University_of_Utah_Hospital_in_2009.JPG" class="d-block w-100" alt="Picture of U of U hospital">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>Healthcare</h5>
                            <p>Premier medical research at the U of U.</p>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="https://www.aruplab.com/files/images/blog/2020-Antibody-Test.jpg" class="d-block w-100" alt="Hospital Researchers">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>COVID-19</h5>
                            <p>The latest in research during this pandemic.</p>
                        </div>
                    </div>
                </div>
                <a class="carousel-control-prev" href="#featured-projects-carousel" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#featured-projects-carousel" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>

        <div class="content-block">
            <h2>
                TESTIMONIALS
            </h2>
            <div class="testimonial">
                <img src="https://www.cs.utah.edu/~germain/Eye_Candy/jim_p.png" />
                <div class="testimonial-body">
                    <h5>Professor Jim de St. Germain</h5>
                    <p>This is a great project, excellent work! It makes finding research as a student, or finding talent for a research opportunity, simple and easy.</p>
                </div>
            </div>

            <div class="testimonial">
                <img src="https://www.cs.utah.edu/~germain/Eye_Candy/jim_p.png" />
                <div class="testimonial-body">
                    <h5>Another User</h5>
                    <p>Excellent work! I went from having no experience to a fully loaded resume and network of experienced professionals. URC was the key that landed me a FAANG job!</p>
                </div>
            </div>
        </div>
    </div>

</main>

