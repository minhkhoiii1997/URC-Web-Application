<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="author" content="Calvin Tu, Kevin Tran" />
    <meta name="description" content="Find research opportunities easily as a student, or find talent easily as a professor. Build your skills and network." />
    <meta name="keywords" content="research, networking, experience, resume, professor, student, university" />

    <!-- Below tags were learned from poking around LinkedIn https://www.linkedin.com/ -->
    <meta name="robots" content="noarchive">
    <meta name="locale" content="en_US" />
    <meta property="og:site_name" content="URC - Undergraduate Research Coordinator">
    <meta property="og:description" content="Find research opportunities easily as a student, or find talent easily as a professor. Build your skills and network." />
    <meta property="og:type" content="website">

    <title>@ViewData["Title"] - URC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <header>
        <partial name="_NavBarPartial" />
    </header>
    <div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - URC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
